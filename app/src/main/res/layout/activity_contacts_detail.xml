<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ContactsDetailActivity">


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:id="@+id/cardView"

        app:cardElevation="4dp"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_marginBottom="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:src="@drawable/user"
                android:scaleType="centerCrop"
                android:id="@+id/contacts__detail_photo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="KARTIK MISHRA"
                android:id="@+id/contacts__detail_name"
                android:textColor="#000"
                android:layout_marginTop="10dp"
                android:layout_marginStart="20sp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:id="@+id/relLayout"
        android:layout_below="@+id/cardView">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/phoneNumberCardView"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/contacts_detail_phone"
                    android:text="Kartik Mishra"
                    android:layout_below="@+id/cardView"
                    android:clickable="false"
                    android:focusable="false"
                    android:textColor="#000"
                    android:gravity="center_vertical"
                    android:layout_gravity="center_vertical"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_phone_black_24dp"
                    android:layout_marginStart="10dp"
                    android:drawablePadding="30sp"
                    android:layout_marginBottom="5dp"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Phone"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="65dp"/>


            </LinearLayout>


        </android.support.v7.widget.CardView>


    </RelativeLayout>



    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/relLayout1"
        android:layout_below="@+id/relLayout">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:id="@+id/emailCardView"
            android:layout_height="60dp"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="2dp"
            app:cardElevation="4dp">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/contacts_detail_email"
                android:text="Kartik Mishra"
                android:drawableLeft="@drawable/ic_email_black_24dp"
                android:drawablePadding="30sp"
                android:layout_below="@+id/cardView"
                android:textColor="#000"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginBottom="10dp"/>

        </android.support.v7.widget.CardView>


    </RelativeLayout>






</RelativeLayout>